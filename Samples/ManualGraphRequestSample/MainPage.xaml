<Page
    x:Class="ManualGraphRequestSample.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:ManualGraphRequestSample"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:ManualGraphRequestSample.Models"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <StackPanel>
        <local:LoginButton />
        <TextBlock x:Name="SignedInUserTextBlock" />
        <ListView ItemsSource="{x:Bind TaskCollection}">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="models:TodoTask">
                    <TextBlock Text="{x:Bind Title}" Margin="12,8" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackPanel>
</Page>